<html>
    <head>
        <link href="/stylesheets/style.css" rel="stylesheet" />
        <script  src='https://code.jquery.com/jquery-3.7.1.min.js'></script>
     
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet"></head>
    <body>
      <div class="root">
        <div class="display_box">
         <div style="display: flex; flex-direction: column;">
        
            <div style="display: flex; width: 780px;">
            
              <div style="display: flex; flex-direction: row;">
                <img src="/images/emp.png"  width="30"/>
                <div class="textstyle">Employees List</div>
             </div>   
               <a href="/employee/employeeregister"  style="margin-left: auto; text-decoration: none; cursor: pointer;"><img src="/images/add.png" width="30"   /></a>
              </div>

           <div>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Emp_Id</th>
                    <th scope="col">Emp_Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Work</th>
                    <th scope="col">Address</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Update</th>
                  </tr>
                </thead>
                <tbody>
        
        <% if(status) { 
      

            data.map((item,i)=>{ %>
            <tr>
                <td><%=i+1 %></td>
                <td><%=item.employeeid %></td>
                <td><%=item.employeename %></td>
                <td><%=item.gender %></td>
                <td><%=item.birthdate %></td>
                <td><%=item.work %><br><%=item.department %></td>
                <td><%=item.Address %><br><%=item.statename %>,<%=item.cityname %></td>
                <td><%=item.salary %></td>
                <td>
                  <a href='/employee/showpicture?eid=<%=item.employeeid%>&employeename=<%=item.employeename %>&picture=<%=item.picture%>' style="text-decoration: none; cursor: pointer;">
                  <img src='/images/<%=item.picture %>' style="width:50px; height: 50px; border-radius: 25px;" >
                 </a> 
                </td>
                
                <td><a href='/employee/search_by_id?eid=<%=item.employeeid%>' style="text-decoration: none; cursor: pointer;">Update</a></td>
            
            
            </tr>




       <% })
         
        } else { %>
          <div class="error_div">
            <img src="/images/servor.png" />

          </div> 
          
        <% }  %>    
                </tbody>
              </table>
        </div>

</div>
</div>
    </body>
</html>